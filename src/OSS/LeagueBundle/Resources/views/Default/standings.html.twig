{% extends 'LeagueBundle::layout.html.twig' %}

{% block content %}
<table>
    <thead>
        <tr>
            <th></th>
            <th>{{ 'standings.team'|trans }}</th>
            <th>{{ 'standings.goals_difference'|trans }}</th>
            <th>{{ 'standings.goals_for'|trans }}</th>
            <th>{{ 'standings.goals_against'|trans }}</th>
            <th>{{ 'standings.points'|trans }}</th>
        </tr>
    </thead>
    <tbody>
{% for position,team in standings %}
        <tr class="{% if app.user and app.user.player.team.equals(team) %}own{% endif %}">
            <td>{{ position+1 }}.</td>
            <td><a href="{{ path('profile_team', { 'id': team.id } ) }}">{{ team.name }}</a></td>
            <td>{{ team.goalsDifference }}</td>
            <td>{{ team.goalsFor }}</td>
            <td>{{ team.goalsAgainst }}</td>
            <td>{{ team.points }}</td>
        </tr>
{% endfor %}
    </tbody>
</table>
{% endblock %}
