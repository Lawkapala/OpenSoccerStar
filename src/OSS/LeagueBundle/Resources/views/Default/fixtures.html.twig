{% extends 'LeagueBundle::layout.html.twig' %}

{% block content %}
    <table>
        <thead>
        <tr>
            <th>{{ 'fixtures.team_home'|trans }}</th>
            <th>{{ 'fixtures.team_away'|trans }}</th>
            <th>{{ 'fixtures.score'|trans }}</th>
        </tr>
        </thead>
        <tbody>
    {% for fixture in fixtures %}
        {% if week is not defined or week != fixture.week %}
            {% set week = fixture.week %}
            <tr>
                <td colspan="3">{{ 'fixtures.week'|trans({ '%week%': week }) }}</td>
            </tr>
        {% endif %}
            <tr>
                <td><a href="{{ path('profile_team', { 'id': fixture.teamHome.id } ) }}">{{ fixture.teamHome.name }}</a></td>
                <td><a href="{{ path('profile_team', { 'id': fixture.teamAway.id } ) }}">{{ fixture.teamAway.name }}</a></td>
                <td>{{ fixture.scoreHome }} : {{ fixture.scoreAway }}</td>
            </tr>
    {% endfor %}
        </tbody>
    </table>
{% endblock %}
