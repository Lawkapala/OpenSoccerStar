{% extends 'LeagueBundle::layout.html.twig' %}

{% block content %}
    <h3>{{ player.name }}<small> - <a href="{{ path('profile_team', { 'id': player.team.id } ) }}">{{ player.team.name }}</a></small></h3>
    <table>
        <thead>
            <tr>
                <th>{{ 'player.skill.defense'|trans }}</th>
                <th>{{ 'player.skill.offense'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ player.skillDefense }}</td>
                <td>{{ player.skillOffense }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
