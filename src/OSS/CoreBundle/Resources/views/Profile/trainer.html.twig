{% extends 'CoreBundle::layout.html.twig' %}

{% block content %}
    <h3>{{ trainer.name }}<small> - {{ trainer.team|teamLink }}</small></h3>
    <table>
        <thead>
            <tr>
                <th>{{ 'trainer.preferred_training.label'|trans }}</th>
                <th>{{ 'trainer.skill.label'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ ('trainer.preferred_training.'~trainer.preferredTraining)|trans }}</td>
                <td>{{ trainer.skill }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
